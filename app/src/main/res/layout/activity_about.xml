<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="24dp"
    tools:context=".About">

    <!-- כותרת -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אודות FieldTime"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- לוגו -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:contentDescription="לוגו האפליקציה"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter" />

    <!-- טקסט תיאור -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="האפליקצייה נוצרה מתוך הצורך לשים סוף לריבים על מגרשים ציבוריים.\nבאמצעות האפליקציה תוכלו למצוא מגרשים פנויים ברחבי הארץ, להזמין מראש את הזמן שלכם, וליהנות ממשחק רגוע ומאורגן.\n\nהמטרה שלנו היא לאפשר לכל אחד לשחק, ליהנות ולכבד אחרים."
        android:textColor="#333333"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- קו הפרדה -->
    <View
        android:id="@+id/divider"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- יוצרי האפליקציה -->
    <TextView
        android:id="@+id/tvCreators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פותח על ידי אילאי מידלר וצוות FieldTime"
        android:textColor="#555555"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- כפתור חזרה -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזרה"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:elevation="6dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvCreators"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
